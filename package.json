{
  "name": "hdd-vue-helpers",
  "type": "module",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "build": "bun --filter './packages/*' prepack",
    "test": "bun --filter './packages/*' test",
    "typecheck": "bun --filter './packages/**' typecheck",
    "release": "bun run lint && bun run typecheck && bun run test && changelogen --output CHANGELOG.md && jiti scripts/release.ts && bun -r run release:publish && git push --follow-tags"
  },
  "workspaces": [
    "packages/*",
    "playground/*",
    ".histoire"
  ],
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@unocss/eslint-plugin": "^66.0.0",
    "bumpp": "^10.1.0",
    "changelogen": "^0.6.1",
    "eslint": "^9.23.0",
    "eslint-plugin-format": "^1.0.1",
    "jiti": "^2.4.2"
  }
}
